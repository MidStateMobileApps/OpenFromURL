<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:OpenFromURL" x:Class="OpenFromURL.OpenFromURLPage">
	<ContentPage.Content>
        <ListView x:Name="lister">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image x:Name="CrankerImage" Source="{Binding ImageURL}"></Image>
                            <Label x:Name="LabelSchoolName" Text="{Binding SchoolName}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
